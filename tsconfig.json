{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis" : true,
        "esModuleInterop": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,        
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "baseUrl": "./"      
    },
    "include": [
        "packages/**/*",
        "global.d.ts"
    ],
    "exclude": [
    "node_modules"
    ]
}